<gridconfig>
<grid name="BiochemXgrid" runner="xgrid" default_url="xgrid://Biocperformance/Biochemprocess2012" enable_all_tools="True">
    <config>
        <option name="xgrid_nfs_mount_location" value="/Users/NFS_SHARE/galaxy-xgrid:/tmp/xgfs/galaxy-xgrid"/>       
    </config>
</grid>

<grid name="NesiPan" runner="nesi" url="nesi://pan:pan.nesi.org.nz" enable_all_tools="False">
    <config>
        <option name="nesi_group" value="/nz/nesi"/>
        <option name="nesi_scripts_directory" value="/lib/galaxy/jobs/runners/nesi_scripts"/>
    </config>
    <queues>
        <option name="gpu" label="GPU Tesla Queue"/>
        <option name="auto" label="AutoQueue"/>
    </queues>
    <runtime>
        <option name="walltime" label="Specify a Wall time for each task created nesi job" type="integer"/>
        <option name="memory"   label="Specify max memory usage for nesi job" type="integer"/>
        <!-- These will be specified and parsed to the runner url if supported !-->
    </runtime>
    <tools>
        <tool id="impute2">
            <paths>
                
            </paths>
        </tool>
    </tools>

</grid>
</gridconfig>
